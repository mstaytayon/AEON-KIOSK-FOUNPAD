<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true"> <!-- focused -->
        <shape android:padding="10dp" android:shape="rectangle">
            <corners android:radius="6dp"/>
            <solid android:color="@color/lightGray" />
            <stroke android:width="5dp" android:color="@color/red_btn_bg_color" />
        </shape>
    </item>

    <item> <!-- main -->
        <shape android:padding="10dp" android:shape="rectangle">
            <solid android:color="#fff" />
            <corners android:radius="5dp" />
            <stroke android:width="5dp" android:color="@color/darkgreen" />
        </shape>
    </item>
</selector>